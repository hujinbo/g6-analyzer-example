{
  "extends": [
    "tslint-react",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "./src/components/mimeicon/raw/*.ts",
      "./src/components/mimeicon/icons.ts"
    ]
  },
  "rules": {
    "import-name": false,
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^\\* |^///? {(.*?)}"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ],
    "jsx-no-multiline-js": false
  }
}